---
import type {HTMLAttributes} from 'astro/types';
interface Props extends HTMLAttributes<'form'> {
    identifier: string;
    action: string;
    novalidate?: boolean;
    children: any
}

const {identifier, action, novalidate, class:className, ...rest} = Astro.props;
---

<form id={identifier} action={action} method="POST" novalidate={novalidate ?? false} class={className} {...rest} >
    <slot/>
</form>

<style>
    form {
        @apply flex flex-col;
    }
</style>